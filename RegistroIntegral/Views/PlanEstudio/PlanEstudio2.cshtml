            <div class="modal fade " tabindex="-1" role="dialog" aria-labelledby="myModalLabel" id="myModal" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content formcenter">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h3 class="modal-title"><i class="fa fa-user"></i> Nuevo Plan de Estudio</h3>
                        </div>

                        <div class="modal-body form-horizontal">
                            <div class="form-group">
                                <label class="col-lg-2 control-label text-right">Nombre:</label>
                                <div class="col-lg-10">
                                    <input id="plan_nombre" onkeypress="return letra(event)" onkeyup="this.value = this.value.toUpperCase();" type="text" class="form-control" placeholder="Ingrese Nombre" autofocus required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label text-right">Distrito:</label>
                                <div class="col-lg-10">
                                    <input id="´plan_distrito" type="text" class="form-control" placeholder="Ingrese Distrito" autofocus required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label text-right">Ugel:</label>
                                <div class="col-lg-10">
                                    <input id="plan_ugel" type="text" class="form-control" placeholder="Ingrese Ugel" autofocus required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label text-right">Instituto:</label>
                                <div class="col-lg-10">
                                    <input id="plan_instituto" type="text" class="form-control" placeholder="Ingrese instituto" autofocus required>
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-lg-2 control-label">Fecha inicial:</label>
                                <div class="col-lg-10">
                                    <div class='input-group date' id='dtpfecha' data-date-format="DD/MM/YYYY">
                                        <input id="fechaini_plan" type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-lg-2 control-label">Fecha final:</label>
                                <div class="col-lg-10">
                                    <div class='input-group date' id='dtpfecha' data-date-format="DD/MM/YYYY">
                                        <input id="fechafin_plan" type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times-circle"></i> Cerrar</button>
                            <button id="btnsave" type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Guardar</button>
                        </div>


                    </div>
